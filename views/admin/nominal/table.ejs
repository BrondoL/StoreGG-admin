<div class="table-responsive">
    <table id="example2" class="table table-bordered table-hover">
        <thead class="text-center">
            <tr>
                <th>No.</th>
                <th>Nama Koin</th>
                <th>Jumlah Koin</th>
                <th>Harga Koin</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <% nominals.forEach((nominal, i) => { %>
            <tr>
                <td><%= i + 1 %></td>
                <td><%= nominal.coinName %></td>
                <td><%= nominal.coinQuantity %></td>
                <td><%= nominal.price %></td>
                <td>
                    <form action="/nominal/<%= nominal._id %>?_method=DELETE" method="POST">
                        <a href="/nominal/<%= nominal._id %>/edit" class="btn btn-sm btn-info">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <button class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>